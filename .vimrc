" set dark background for better syntax highlighting colors for dark terminal
"set background=dark

" enable 256 colors
set t_Co=256

" enable syntax highlighting
syntax on

" enable line numbers
set number

" enable automatic indentation ( repeats indent from previous line )
set autoindent

" use 4 spaces for tabs
set tabstop=4
set shiftwidth=4
set expandtab

colorscheme monokai
